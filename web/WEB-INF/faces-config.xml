<?xml version='1.0' encoding='UTF-8'?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">

    <managed-bean>
        <managed-bean-name>phoneNumbers</managed-bean-name>
        <managed-bean-class>com.addressbook.model.PhoneNumber</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/list.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>updated</from-outcome>
            <to-view-id>/update.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/create.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>created</from-outcome>
            <to-view-id>/submitted.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/update.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>updated</from-outcome>
            <to-view-id>/updated.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <validator>
        <validator-id>nameValidator</validator-id>
        <validator-class>com.addressbook.validators.FirstNameValidator</validator-class>
    </validator>
    <validator>
        <validator-id>phoneValidator</validator-id>
        <validator-class>com.addressbook.validators.PhoneValidator</validator-class>
    </validator>
    <validator>
        <validator-id>imageValidator</validator-id>
        <validator-class>com.addressbook.validators.CreateImageValidator</validator-class>
    </validator>
    <validator>
        <validator-id>lastNameValidator</validator-id>
        <validator-class>com.addressbook.validators.LastNameValidator</validator-class>
    </validator>
    <validator>
        <validator-id>createContactValidator</validator-id>
        <validator-class>com.addressbook.validators.CreateContactValidator</validator-class>
    </validator>
    <validator>
        <validator-id>updateImageValidator</validator-id>
        <validator-class>com.addressbook.validators.UpdateImageValidator</validator-class>
    </validator>
</faces-config>